- @orders.each do |order|
  .general-cart-item.divider-lg-bottom.pt-0
    %table.table
      %tr
        %td.col-half
          %span.in-grey-600= t('order.item_number')
        %td.col-half
          %span.general-order-number= order.number
      %tr
        %td
          %span.in-grey-600= t('order.item_completed_at')
        %td
          %span.in-grey-900.font-16.fw-300 2016-11-14
      %tr
        %td
          %span.in-grey-600= t('order.item_status')
        %td
          %span.font-16.in-grey-900.fw-300= order.order_status
      %tr
        %td
          %span.in-grey-600= t('order.item_total')
        %td
          %strong.font-16= order.order_price
          