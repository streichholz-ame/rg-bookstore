%main.container
  %h1.general-title-margin
    = t('account_settings.header')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}= t('account_settings.address')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}= t('account_settings.privacy')
  .tab-content
    #address.tab-pane.fade.in.active.general-main-wrap{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0= t('account_settings.addresses.billing_address')
            = simple_form_for(@presenter.billing_form, validate: true,  defaults: { input_html: { class: "form-control" }}, url: addresses_path, html: { method: :post, id: "BillingAddress" }) do |f|
              = render partial: 'address_inputs_form', locals: { f: f, type: "BillingAddress" }
              .text-center.general-text-align
                = f.submit t('account_settings.save'), class: 'btn btn-default'
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0= t('account_settings.addresses.shipping_address')
            = simple_form_for(@presenter.billing_form, validate: true,  defaults: { input_html: { class: "form-control" }}, url: addresses_path, html: { method: :post, id: "ShippingAddress" }) do |f|
              = render partial: 'address_inputs_form', locals: { f: f, type: "ShippingAddress" }
              .text-center.general-text-align
                = f.submit t('account_settings.save'), class: 'btn btn-default'
        .row
          .col-md-5.mb-40
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0= t('account_settings.addresses.billing_address')
              = simple_form_for(@presenter.billing_form, validate: true,  defaults: { input_html: { class: "form-control" }}, url: addresses_path, html: { method: :post, id: "BillingAddress" }) do |f|
                = render partial: 'address_inputs_form', locals: { f: f, type: "BillingAddress" }
                .text-center.general-text-align
                  = f.submit t('account_settings.save'), class: 'btn btn-default'
          .col-md-5.col-md-offset-1.mb-25
            .visible-xs.visible-sm
              %h3.general-subtitle.mt-0= t('account_settings.addresses.shipping_address')
              = simple_form_for(@presenter.billing_form, validate: true,  defaults: { input_html: { class: "form-control" }}, url: addresses_path, html: { method: :post, id: "ShippingAddress" }) do |f|
                = render partial: 'address_inputs_form', locals: { f: f, type: "ShippingAddress" }
                .text-center.general-text-align
                  = f.submit t('account_settings.save'), class: 'btn btn-default'
    #privacy.tab-pane.fade{role: "tabpanel"}
      = render 'privacy'