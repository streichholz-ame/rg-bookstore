%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t('header.bookstore')
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('header.home'), root_path
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} 
              = t('header.shop')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                %a.collapse-link{href: "#"} 'Mobile development'
              %li
                %a.collapse-link{href: "#"} 'Photo'
              %li
                %a.collapse-link{href: "#"} 'Web design'
          %li
            = link_to t('header.my_account') 
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('header.home'), root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} 
              =t('header.shop')
            %ul.dropdown-menu
              %li
                = link_to 'Mobile development'
              %li
                = link_to 'Photo'
              %li
                = link_to 'Web design'
              %li.divider{role: "separator"}
              %li
                = link_to t('header.log_out')
          %li
            = link_to t('header.my_account')
