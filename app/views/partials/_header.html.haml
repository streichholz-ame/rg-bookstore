%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t('header.bookstore')
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t('header.home'), root_path
          %li
            %a{type: "button", 'data-toggle': "collapse", href: "#menu", 'aria-expanded': "false", 'aria-controls': "menu"} 
              = t('header.shop')
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              - @header_presenter.categories.each do |category|
                %li
                  = link_to category.name, catalog_category_path(category), class: 'collapse-link'
          
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('header.home'), root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} 
              =t('header.shop')
            %ul.dropdown-menu
              - @header_presenter.categories.each do |category|
                %li
                  = link_to category.name, catalog_category_path(category)
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"} 
                =t('header.my_account')
              %ul.dropdown-menu
                %li
                  = link_to t('header.orders')
                %li
                  = link_to t('header.settings'), edit_address_path(current_user)
                %li
                  = link_to t('header.log_out'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('header.sign_in'), new_user_session_path
            %li
              = link_to t('header.sign_up'), new_user_registration_path