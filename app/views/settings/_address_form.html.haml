= form_for :address_form, as: "#{locals[:type]}_form", url: addresses_path, method: :post do |f|
  = hidden_field_tag 'type', locals[:type]
  = render partial: 'address_inputs_form', locals: { f: f, type: locals[:type], address_form: 'address_form' }
  .text-center.general-text-align
    = submit_tag t('account_settings.save'), class: 'btn btn-default'
