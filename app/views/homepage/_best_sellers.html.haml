.mb-35
  %h3= t('homepage.best_sellers')
  .row
    - @catalog_presenter.best_sellers.each do |book|
      .col-sm-6.col-md-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail#best-sellers-row
            %img.img-shadow.general-thumbnail-img
              = image_tag book.image_url(:small_image), alt: book.name
            .thumb-hover
              .general-thumb-link-wrap
                %a.thumb-hover-link{href: '#'}
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': 'true'}
                %a.thumb-hover-link{href: '#'}
                  %i.fa.fa-shopping-cart.thumb-icon
        .mb-35
          .clearfix
            %p.pull-right.font-16.in-gold-500= t('book_page.price', price: book.price)
            %p.title.mr-55= book.name
          %span.divider-sm
          %p.lead.small= @catalog_presenter.author_name(book)
