%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('devise.sign_up')
    %a.general-login-icon{href: "#"}
      %i.fa.fa-facebook-official
    %p.general-login-text or
  .general-form
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group.mb-30
        = label_tag 'email', t('devise.enter_email'), class: 'control-label input-label'
        = f.email_field :email, placeholder: "Enter Email", autofocus: true, autocomplete: "email", class: 'form-control', id: 'email'
      .form-group.mb-30
        = label_tag 'password', t('devise.enter_password'), class: 'control-label input-label'
        = f.password_field :password, placeholder: "Password", autocomplete: "password", class: 'form-control', id: 'password'
      .form-group.mb-30
        = label_tag 'confirm', t('devise.confirm_password'), class: 'control-label input-label'
        = f.password_field :password, placeholder: "Confirm Password", autocomplete: "password", class: 'form-control', id: 'confirm-password'
      .text-center
        = f.submit t('devise.sign_up'), class: 'btn btn-default mb-20'
